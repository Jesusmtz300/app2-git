<?xml version="1.0" encoding="utf-8"?>

 <widget xmlns ="http://www.w3.org/ns/widgets"
  xmlns:gap="http://phonegap.com/ns/1.0"
  id ="com.phonegap.example2"
  version ="1.0.0">
  
 <name> app2 Telefonia Celeular en Mexico </name>
 
 <description>
  Aplicacion que muestra informacion sobre la telefonia celular
 </description>
 
 <author href="https://build.phonegap.com" email="jorgemtz3000@gmail.com">
  Jorge Jesus Vazquez Martinez 4F 
 </author>
 
 <!--Personaliza la aplicacion y plataforma -->
 <perference name="orientation" value="default"/>
 <!--<preference name="orientation" value="portrait"/>
 <preference name="orientation" value="landscape"/>-->
 <preference name="target-device" value="universal"/>
 <perference name="fullscreen" value="true"/>
 <perference name="android-installLocation" value="auto"/>
 <perference name="permissions" value="INTERNET"/>
 
  <!-- Plugins -->
  <!-- Core plugin-->
 <plugin name="cordova-plugin-device" spec="~1.1.4"/>
 <plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
 <plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>
  
 <!--<plugin name="cordova-plugin-geolocation" source="npm"/-->
  <!--Third party pligins-->
  
  <!-- Para acceder a paginas de internet-->
  <allow-intent href="https://*/*"/>
  <acces origin="https://*/*"/>
  <allow-intent href="http://*/*"/>
  <acces origin="http://*/*"/>
  
   <!-- Colocar icono app-->
   
 <icon src="res/android/mdpi.png"/>
 
 </widget>
  